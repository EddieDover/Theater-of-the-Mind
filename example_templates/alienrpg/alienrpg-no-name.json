{
  "name": "Alien: The Roleplaying Game - No Names",
  "system": "alienrpg",
  "author": "Michael Card (EmoCthulhu)",
  "offline_includes_property": "system.header.npc",
  "offline_includes": [
    false
  ],
  "rows": [
    [
      {
        "Name": "Character",
        "type": "charactersheet",
        "header": "hide",
        "text": ""
      },
      {
        "name": "Career",
        "align": "left",
        "type": "direct-complex",
        "header": "show",
        "text": [
          {
            "type": "match",
            "ifdata": "system.general.career",
            "matches": "1",
            "text": "Career: {i} Colonial Marine {/i}"
          },
          {
            "type": "match",
            "ifdata": "system.general.career",
            "matches": "2",
            "text": "Career: {i} Colonial Marshall {/i}"
          },
          {
            "type": "match",
            "ifdata": "system.general.career",
            "matches": "3",
            "text": "Career: {i} Company Agent {/i}"
          },
          {
            "type": "match",
            "ifdata": "system.general.career",
            "matches": "4",
            "text": "Career: {i} Kid {/i}"
          },
          {
            "type": "match",
            "ifdata": "system.general.career",
            "matches": "5",
            "text": "Career: {i} Medic {/i}"
          },
          {
            "type": "match",
            "ifdata": "system.general.career",
            "matches": "6",
            "text": "Career: {i} Mercenary {/i}"
          },
          {
            "type": "match",
            "ifdata": "system.general.career",
            "matches": "7",
            "text": "Career: {i} Officer {/i}"
          },
          {
            "type": "match",
            "ifdata": "system.general.career",
            "matches": "8",
            "text": "Career: {i} Pilot {/i}"
          },
          {
            "type": "match",
            "ifdata": "system.general.career",
            "matches": "9",
            "text": "Career: {i} Roughneck {/i}"
          },
          {
            "type": "match",
            "ifdata": "system.general.career",
            "matches": "10",
            "text": "Career: {i} Scientist {/i}"
          },
          {
            "type": "match",
            "ifdata": "system.general.career",
            "matches": "11",
            "text": "{i} Synthetic {/i}"
          },
          {
            "type": "match",
            "ifdata": "system.general.career",
            "matches": "12",
            "text": "{i} Homebrew {/i}"
          },
          {
            "type": "match",
            "ifdata": "system.general.career",
            "matches": "13",
            "text": "Career: {i} Wildcatter {/i}"
          },
          {
            "type": "match",
            "ifdata": "system.general.career",
            "matches": "14",
            "text": "Career: {i} Entertainer {/i}"
          }
        ]
      },
      {
        "name": "Health",
        "minwidth": 50,
        "type": "direct",
        "align": "center",
        "valign": "top",
        "header": "show",
        "text": "{b} system.header.health {/b} / system.header.health.max"
      },
      {
        "name": "Stress",
        "minwidth": 50,
        "type": "direct-complex",
        "align": "center",
        "valign": "top",
        "header": "show",
        "text": [
          {
            "type": "match",
            "ifdata": "type",
            "matches": "synthetic",
            "text": "N/A"
          },
          {
            "type": "match",
            "ifdata": "type",
            "matches": "character",
            "text": "system.header.stress"
          }
        ]
      },
      {
        "name": "Panic",
        "minwidth": 50,
        "type": "direct-complex",
        "align": "center",
        "valign": "top",
        "header": "show",
        "text": [
          {
            "type": "match",
            "ifdata": "type",
            "matches": "synthetic",
            "text": "N/A"
          },
          {
            "type": "match",
            "ifdata": "type",
            "matches": "character",
            "text": "system.general.panic.lastRoll"
          }
        ]
      },
      {
        "name": "Strength Group",
        "maxwidth": 70,
        "type": "direct",
        "align": "left",
        "valign": "top",
        "header": "show",
        "text": "STR: {b} system.attributes.str {/b} {newline} {newline} CC: system.skills.closeCbt / {b} system.skills.closeCbt {+} system.attributes.str {/b} {newline} HM: system.skills.heavyMach / {b} system.skills.heavyMach {+} system.attributes.str {/b} {newline} Sta: system.skills.stamina / {b} system.skills.stamina {+} system.attributes.str {/b}"
      },
      {
        "name": "Agility Group",
        "maxwidth": 70,
        "type": "direct",
        "align": "left",
        "valign": "top",
        "header": "show",
        "text": "AGL: {b} system.attributes.agl {/b} {newline} {newline} RC: system.skills.rangedCbt / {b} system.skills.rangedCbt {+} system.attributes.agl {/b} {newline} Mob: system.skills.mobility / {b} system.skills.mobility {+} system.attributes.agl {/b} {newline} Pilot: system.skills.piloting / {b} system.skills.piloting {+} system.attributes.agl {/b}"
      },
      {
        "name": "Empathy Group",
        "maxwidth": 70,
        "type": "direct",
        "align": "left",
        "valign": "top",
        "header": "show",
        "text": "EMP: {b} system.attributes.emp {/b} {newline} {newline} Com: system.skills.command / {b} system.skills.command {+} system.attributes.emp {/b} {newline} Man: system.skills.manipulation / {b} system.skills.manipulation {+} system.attributes.emp {/b} {newline} Med: system.skills.medicalAid / {b} system.skills.medicalAid {+} system.attributes.emp {/b}"
      },
      {
        "name": "Wits Group",
        "maxwidth": 70,
        "type": "direct",
        "align": "left",
        "valign": "top",
        "header": "show",
        "text": "WIT: {b} system.attributes.wit {/b} {newline} {newline} Obs: system.skills.observation / {b} system.skills.observation {+} system.attributes.wit {/b} {newline} Sur: system.skills.survival / {b} system.skills.survival {+} system.attributes.wit {/b} {newline} CT: system.skills.comtech / {b} system.skills.comtech {+} system.attributes.wit {/b}"
      },
      {
        "name": "Statuses",
        "type": "array-string-builder",
        "align": "left",
        "valign": "top",
        "maxwidth": 90,
        "header": "show",
        "text": "statuses => value, "
      }
    ]
  ]
}