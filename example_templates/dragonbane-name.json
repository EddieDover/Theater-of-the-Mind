{
	"name": "Dragonbane - With Name",
	"system": "dragonbane",
	"author": "Michael Card (Emo Cthulhu)",
	"offline_excludes": [
		"npc",
		"base",
		"monster"
	],
	"rows": [
		[
			{
				"name": "Character Sheet",
				"align": "center",
				"type": "charactersheet",
				"coltype": "skip",
				"value": ""
			},
			{
				"name": "Name",
				"align": "left",
				"maxwidth": 100,
				"type": "direct",
				"coltype": "show",
				"value": "name"
			},
			{
				"name": "Age & Kin",
				"align": "center",
				"valign": "top",
				"type": "direct",
				"coltype": "show",
				"value": "Age: system.age {newline} Kin: system.kin.name"
			},
			{
				"name": "Hit Points",
				"align": "center",
				"valign": "bottom",
				"type": "direct",
				"coltype": "show",
				"value": "system.hitPoints / system.hitPoints.max {newline} {newline}"
			},
			{
				"name": "STR",
				"align": "center",
				"valign": "bottom",
				"type": "direct-complex",
				"coltype": "show",
				"value": [
					{
						"type": "match",
						"match": true,
						"value": "system.conditions.str",
						"text": "system.attributes.str {newline} Exhaust",
						"else": "system.attributes.str {newline} {newline}"
					}
				]
			},
			{
				"name": "CON",
				"align": "center",
				"valign": "bottom",
				"type": "direct-complex",
				"coltype": "show",
				"value": [
					{
						"type": "match",
						"match": true,
						"value": "system.conditions.con",
						"text": "system.attributes.con {newline} Sickly",
						"else": "system.attributes.con {newline} {newline}"
					}
				]
			},
			{
				"name": "AGL",
				"align": "center",
				"valign": "bottom",
				"type": "direct-complex",
				"coltype": "show",
				"value": [
					{
						"type": "match",
						"match": true,
						"value": "system.conditions.agl",
						"text": "system.attributes.agl {newline} Dazed",
						"else": "system.attributes.agl {newline} {newline}"
					}
				]
			},
			{
				"name": "INT",
				"align": "center",
				"valign": "bottom",
				"type": "direct-complex",
				"coltype": "show",
				"value": [
					{
						"type": "match",
						"match": true,
						"value": "system.conditions.int",
