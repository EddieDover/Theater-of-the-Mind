<form autocomplete="off" class="totm-hc-psform">
  {{#unless enableOnlyOnline}}
  <button class="totm-options" name="totm-options"><i class="fas fa-cog"></i>{{localize "theater-of-the-mind.hide-sheet.button" }}</button>
  {{/unless}}
  {{#if applicableSystems.length}}
    <details>
      <summary>Options</summary>
      <select name="totm-system" id="totm-system-select">
        {{#each applicableSystems as |system|}}
        <option value="{{system.name}}___{{system.author}}" {{#ifCond system.name '==' ../selectedName}} {{#ifCond system.author '==' ../selectedAuthor }}selected{{/ifCond}}{{/ifCond}}>{{system.name}} - {{system.author}}</option>
        {{/each}}
      </select>
    </details>
  {{/if}}
  {{#if players}}
  <table id='totm-ps-table'>
    <thead>
      {{#with players.[0] as |player_data|}}
        {{#each player_data as |row|}}
        <tr>
          {{#getKeys row}}
            {{#hcifhidden row key=this}}
              <th></th>
            {{else}}
              <th
                colspan="{{getColSpan row this}}"
              >{{this}}</th>
            {{/hcifhidden}}
          {{/getKeys}}
        </tr>
        {{/each}}
      {{/with}}
    </thead>
    {{#each players as |player_data|}}
      {{#each player_data as |player_row|}}
      <tr
        {{#checkIndex @../index}}
          class="dark"
        {{else}}
          class="light"
        {{/checkIndex}}
      >
        {{#getKeys player_row}}
          <td
          style="text-align:{{getAlignment player_row this}};"
          >
            {{getData player_row this}}
          </td>
        {{/getKeys}}
      </tr>
      {{/each}}
    {{/each}}

    </tbody>
  </table>
  {{else}}
    <div class="totm-ps-no-players">{{ localize "theater-of-the-mind.party-sheet.no-players" }}</div>
  {{/if}}
  <button name="totm-close" class="totm-close"><i class="fas fa-times"></i>Close</button>
</form>
